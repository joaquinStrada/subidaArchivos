<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subida de Archivos - Nodejs</title>
    <link rel="stylesheet" href="fonts/roboto.css">
    <link rel="stylesheet" href="fonts/css/all.min.css">
    <link rel="stylesheet" href="css/estilos.css">
</head>
<body>
    <div class="container">
        <h1>Subida de Archivos</h1>
        <div class="upload" id="upload">
            <input type="file" id="input-file">
            <p><i class="fas fa-upload"></i>Subir</p>
        </div>
        <div class="row" id="row-upload">
            <button id="btn-upload"><i class="fas fa-check"></i>Subir</button>
            <button id="btn-cancel"><i class="fas fa-times"></i>Cancelar</button>
        </div>
        <ul class="files" id="files">
            <li>Archivos</li>
            <% if (list.length > 0) { %>
                <% list.forEach(file => { %>
                    <li>
                        <p data-file="<%= file %>"><i class="fas fa-file"></i><%= file %></p>
                        <button data-file="<%= file %>"><i class="fas fa-times"></i>Eliminar</button>
                    </li>
                <% }) %>
            <% } else { %>
                <li class="text-center">No se encontro ning√∫n archivo</li>
            <% } %>
        </ul>
    </div>
    <script src="js/app.js"></script>
</body>
</html>